<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://kit.fontawesome.com/0516be47bc.js" crossorigin="anonymous"></script>
    <script lang="text/javascript" src="/socket.io/socket.io.js"></script>
    <script src="/simple-peer/simplepeer.min.js"></script>
    <link rel="stylesheet" href="./css/room.css">
    
</head>
<body>
    <h1 class="room_id"><strong>room id :</strong> <%= roomId %></h1>
   
    <div class="main">
       
        <div class="main__left">
            <div id="videos" class="video_section">
                    <video  controls id="myVideo" class="vid" autoplay muted></video>        
            </div>

            <div class="video_options">
                <div class="video_icons">
                    <!-- <i class="fas fa-microphone-alt left-icons sss" onclick="toggleMute()"></i> -->

                    <i class="fa fa-info-circle fa-lg left-icons" aria-hidden="true"></i>
                  
                     <a href="/" class="left-icons"><i class="fas fa-phone-alt"></i></a>

                    <i class="fas fa-video left-icons ppp" onclick="toggleVid()"></i>
                </div>
                <div class="video_share" onclick="setScreen()">
                    <i class="fas fa-share-square" ></i>
                    <p>Screen share</p>
                </div>
                <div class="video_chat" onclick="handleChat()">
                    
                    <i class="fas fa-comment-alt fa-2x">
                        <span class="chat_count"></span>
                    </i>
                </div>
            </div>

        </div>

        <div class="main__right" >
              <div class="main__header">
                <h2>Chat</h2>
              </div>
              
              <div  class="main__chat_window">
                <ul class="messages"></ul>
              </div>

              <div class="main__message_container">
                <input
                  id="chat_message"
                  type="text"
                  placeholder="Type message here..."
                />
                <i class="fas fa-paper-plane"></i>
              </div>
        </div>
    </div>

    <script>
        const NAME = "<%= username %>"
        const ROOM_ID = "<%= roomId %>"
        var chat_count = 0;
     </script>

 <!-- chat section toggle -->
    <script>
        var isChat = true;
        function handleChat(){   
            var main_right = document.querySelector(".main__right");
             if (isChat) {
        document.querySelector(".main__right").style.display = "none" ;
        document.querySelector(".main__left").style.flex = 1 ;
        isChat = false;
    } else {
        document.querySelector(".main__right").style.display = "flex" ;
        document.querySelector(".main__left").style.flex = 0.8 ;
        document.querySelector(".chat_count").style.display = "none";

        chat_count = 0;
        isChat = true;
    }
        }

    </script>

<!-- room id display -->
    <script>
        var isInfo = true
        document.querySelector(".fa-info-circle").addEventListener("click",() => {
            if(isInfo){
                document.querySelector(".room_id").style.display = "block"
                isInfo = false
            } else {
                document.querySelector(".room_id").style.display = "none"
                isInfo = true 
            }
        })
    </script>

    <script src="js/room.js"></script>
    
</body>
</html>